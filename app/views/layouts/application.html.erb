/* Flex Container for Action Buttons */
.btn-container {
  display: flex;
  flex-direction: column; /* Vertical layout for the container */
  align-items: center;
  gap: 10px; /* Add space between rows */
}

/* Row for Show and Edit Buttons */
.btn-row {
  display: flex; /* Horizontal layout for Show and Edit buttons */
  justify-content: center;
  gap: 10px; /* Add space between Show and Edit buttons */
}

/* Delete Button Styling */
.btn-delete {
  background-color: #e74c3c;
  color: #fff;
  padding: 12px 20px;
  border-radius: 30px;
  text-align: center;
  font-size: 1.1em;
  font-weight: 600;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  border: 2px solid transparent;
  width: calc(2 * 100px + 10px); /* Match width of two buttons plus gap */
}

.btn-delete:hover {
  background-color: #c0392b;
  border-color: #c0392b;
}
/* Form Container Styling */
.employee-form-container {
  max-width: 500px;
  margin: 40px auto;
  background-color: #ffffff;
  border-radius: 15px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  padding: 40px 30px;
  text-align: center;
  transition: transform 0.3s ease-in-out;
}

.employee-form-container:hover {
  transform: translateY(-5px); /* Subtle hover effect */
}

/* Title Styling */
.employee-form-container h1 {
  font-size: 2.5em;
  color: #333;
  margin-bottom: 30px;
  font-weight: 600;
  letter-spacing: 1px;
}

/* Form Layout */
.employee-form-container form {
  display: flex;
  flex-direction: column;
  gap: 25px; /* More space between form fields */
  align-items: stretch;
}

/* Input Box Container */
.input-box {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 8px;
  padding: 10px;
  border: 2px solid #ddd;
  border-radius: 10px;
  background-color: #f7f8fa;
  transition: all 0.3s ease;
}

/* Input Field Styling */
.input-box-field {
  padding: 14px 20px;
  font-size: 1.1em;
  border: none;
  border-radius: 8px;
  width: 100%;
  background-color: #ffffff;
  transition: all 0.3s ease;
}

/* Focused Input Field */
.input-box-field:focus {
  border-color: #3498db;
  box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
  outline: none;
}

/* Placeholder Text Styling */
.input-box-field::placeholder {
  color: #888;
  font-weight: 400;
}

/* Labels */
.input-box label {
  font-size: 1.1em;
  color: #555;
  text-align: left;
  margin-bottom: 8px;
  font-weight: 500;
}

/* Back Button Styling */
.btn-back {
  display: inline-block;
  background-color: #3498db;
  color: #fff;
  padding: 12px 30px;
  font-size: 1.2em;
  font-weight: 600;
  text-decoration: none;
  border-radius: 50px;
  transition: background-color 0.3s ease, transform 0.3s ease;
  margin-top: 20px;
  text-align: center;
}

.btn-back:hover {
  background-color: #2980b9;
  transform: translateY(-3px); /* Slight lift effect */
}

/* Button Container for Alignment */
.btn-container {
  display: flex;
  justify-content: center;
  margin-top: 30px;
}
/* Submit Button Styling */
.btn-submit {
  display: inline-block;
  background-color: #27ae60;
  color: #fff;
  padding: 12px 30px;
  font-size: 1.2em;
  font-weight: 600;
  text-decoration: none;
  border-radius: 50px;
  transition: background-color 0.3s ease, transform 0.3s ease;
  margin-top: 20px;
  text-align: center;
  cursor: pointer;
}

.btn-submit:hover {
  background-color: #219150;
  transform: translateY(-3px); /* Slight lift effect */
}

.btn-submit:active {
  background-color: #1e7b4f;
  transform: translateY(0);
}



