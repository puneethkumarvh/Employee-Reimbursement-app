<div class="reimbursement-claims">
  <h1>Reimbursement Claims</h1>

  <div class="actions">
    <%= link_to 'New Claim', new_company_employee_reimbursement_claim_path(@company, @employee), 
          class: 'btn btn-primary' %>
  </div>

  <table class="claims-table">
    <thead>
      <tr>
        <th>Purpose</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @reimbursement_claims.each do |claim| %>
        <tr>
          <td><%= claim.purpose %></td>
          <td><%= number_to_currency(claim.amount, unit: "â‚¹", delimiter: ",", precision: 2) %></td>
          <td><%= claim.date_of_expenditure %></td>
          <td>
            <%= link_to 'Show', company_employee_reimbursement_claim_path(@company, @employee, claim), 
                  class: 'btn btn-show' %>
            <%= link_to 'Edit', edit_company_employee_reimbursement_claim_path(@company, @employee, claim), 
                  class: 'btn btn-edit' %>
            <%= button_to 'Delete', company_employee_reimbursement_claim_path(@company, @employee, claim), 
                  method: :delete, 
                  data: { confirm: 'Are you sure?' }, 
                  class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="back-link">
    <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
  </div>
</div>

<style>
  .reimbursement-claims {
    font-family: Arial, sans-serif;
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background: #f9f9f9;
    border-radius: 8px;
    border: 1px solid #ddd;
  }

  .actions {
    margin-bottom: 20px;
  }

  .claims-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }

  .claims-table th, 
  .claims-table td {
    border: 1px solid #ddd;
    padding: 10px;
    text-align: left;
  }

  .claims-table th {
    background-color: #007bff;
    color: white;
  }

  .claims-table tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  .btn {
    display: inline-block;
    padding: 8px 12px;
    text-decoration: none;
    border-radius: 4px;
    font-size: 14px;
    color: white;
    cursor: pointer;
  }

  .btn-primary {
    background-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .btn-show {
    background-color: #17a2b8;
  }

  .btn-show:hover {
    background-color: #117a8b;
  }

  .btn-edit {
    background-color: #28a745;
  }

  .btn-edit:hover {
    background-color: #218838;
  }

  .btn-danger {
    background-color: #dc3545;
  }

  .btn-danger:hover {
    background-color: #bd2130;
  }

  .btn-secondary {
    background-color: #6c757d;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .back-link {
    text-align: right;
  }
</style>
