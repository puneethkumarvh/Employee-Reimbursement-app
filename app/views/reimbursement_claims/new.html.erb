<div class="reimbursement-claim-form">
  <h1><%= action_name.capitalize %> Reimbursement Claim</h1>

  <%= form_with model: [@company, @employee, @reimbursement_claim], local: true, class: 'form' do |form| %>
    <div class="form-group">
      <%= form.label :purpose, "Purpose", class: "form-label" %>
      <%= form.text_field :purpose, class: "form-control", placeholder: "Enter purpose" %>
    </div>
    
    <div class="form-group">
      <%= form.label :amount, "Amount", class: "form-label" %>
      <%= form.number_field :amount, step: 0.01, class: "form-control", placeholder: "Enter amount" %>
    </div>
    
    <div class="form-group">
      <%= form.label :date_of_expenditure, "Date of Expenditure", class: "form-label" %>
      <%= form.date_field :date_of_expenditure, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.label :receipts, "Upload Receipts", class: "form-label" %>
      <%= form.file_field :receipts, multiple: true, class: "form-control-file" %>
    </div>
    
    <div class="form-actions">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="back-link">
    <%= link_to 'Back', company_employee_reimbursement_claims_path(@company, @employee), class: "btn btn-secondary" %>
  </div>
</div>

<style>
  .reimbursement-claim-form {
    font-family: Arial, sans-serif;
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background: #f9f9f9;
    border-radius: 8px;
    border: 1px solid #ddd;
  }

  .reimbursement-claim-form h1 {
    margin-bottom: 20px;
    color: #333;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #555;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .form-control-file {
    display: block;
    margin-top: 5px;
  }

  .form-actions {
    margin-top: 20px;
    text-align: right;
  }

  .btn {
    display: inline-block;
    padding: 8px 12px;
    font-size: 14px;
    border-radius: 4px;
    text-decoration: none;
    color: white;
    cursor: pointer;
  }

  .btn-primary {
    background-color: #007bff;
    border: none;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  .btn-secondary {
    background-color: #6c757d;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .back-link {
    margin-top: 20px;
    text-align: right;
  }
</style>
